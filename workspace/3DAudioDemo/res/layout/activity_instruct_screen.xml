<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".InstructScreen" >

    <TextView
        android:layout_width="600sp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/instruct_message"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/gametel_trigger"
        android:layout_width="300sp"
        android:layout_height="300sp"
        android:contentDescription="@string/button_gametel_description"
        android:src="@drawable/gametel_trigger" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" >

        <Button
            android:id="@+id/play_button"
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:textSize="45sp"
            android:text="@string/play_button" />
    </LinearLayout>

</LinearLayout>