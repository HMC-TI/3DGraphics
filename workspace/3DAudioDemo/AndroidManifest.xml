<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.daudiodemo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <application
        android:allowBackup="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- Service definition for Bluetooth communication (keep it running in background of app activities) -->
        <service android:name="com.example.daudiodemo.SensorHubService" >
        </service>

        <activity
            android:name="com.example.daudiodemo.IntroScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.daudiodemo.RazorExample"
            android:label="@string/app_name" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".RazorExample" >
            </meta-data>
        </activity>

        <activity
            android:name="com.example.daudiodemo.InstructScreen"
            android:label="@string/app_name"
            android:parentActivityName="com.example.daudiodemo.RazorExample" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".RazorExample" />
        </activity>
        
        <activity
            android:name="com.example.daudiodemo.DemoGraphics"
            android:label="@string/app_name" 
            android:parentActivityName="com.example.daudiodemo.RazorExample">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".RazorExample" >
            </meta-data>
        </activity>
        
    </application>

    <!-- Permissions for Bluetooth communication -->
    <uses-permission android:name="android.permission.BLUETOOTH" >
    </uses-permission>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" >
    </uses-permission>
    <!-- Permissions for automatic retrieval of magnetic declination -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" >
    </uses-permission>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" >
    </uses-permission>

</manifest>